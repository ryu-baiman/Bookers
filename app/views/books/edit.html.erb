<head>
  <link rel="stylesheet" media="all" href="books.scss">
  <title>WebCampBackendNew</title>
</head>
<body>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors occurred
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <h1>Editing Book</h1>
  <%= form_with model:@book, local:true do |f| %>

    <div class="field">
      <label>Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label>Body</label>
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit 'Update Book' %>
    </div>

  <% end %>
  <%= link_to "Show", book_path(@book.id) %>
  |
  <a href="/books">Back</a>
</body>