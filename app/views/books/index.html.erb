<html>
    <head>
        <link rel="stylesheet" media="all" href="books.scss">
        <title>WebCampBackendNew</title>
    </head>
    <body>
        <h1>Books</h1>
        <table>
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Body</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% if @book.errors.any? %>
                    <%= @book.errors.count %>errors occurred
                    <% @book.errors.full_messages.each do |message| %>
                        <%= message %>
                    <% end %>
                <% end %>

                <% @books.each do |book| %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.body %></td>
                    <td><%= link_to "Show", book_path(book.id) %></td>
                    <td><%= link_to "Edit", edit_book_path(book) %></td>
                    <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
                </tr>
                <% end %>
            </tbody>
        </table>

        <h2>New book</h2>
        <%= form_with model:@book, local:true do |f| %>

          <div class="field">
              <label>Title</label>
              <%= f.text_field :title %>
          </div>

          <div class="field">
              <label>Body</label>
              <%= f.text_area :body %>
          </div>

          <div class="actions">
              <%= f.submit 'Create Book' %>
          </div>

        <% end %>
    </body>
</html>